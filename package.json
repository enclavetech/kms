{
  "name": "@enclavetech/kms",
  "description": "Runtime key management for Enclave apps.",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "author": "Enclave Technology",
  "repository": "github:enclavetech/kms",
  "homepage": "https://github.com/enclavetech/key-manager#readme",
  "keywords": [
    "encryption",
    "crypto"
  ],
  "type": "module",
  "workspaces": [
    "packages/core",
    "packages/adapters/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "dev": "concurrently -k npm:dev:*",
    "dev:core": "npm run dev --workspace ./packages/core",
    "dev:openpgp": "npm run dev --workspace ./packages/adapters/openpgp",
    "line-count": "find -type f -name *.ts -exec cat {} \\; | wc -l",
    "lint": "prettier --check . && eslint .",
    "prettier": "prettier --write ."
  },
  "devDependencies": {
    "@enclavetech/kms-core": "file:packages/core",
    "@typescript-eslint/eslint-plugin": ">=5.59.5",
    "@typescript-eslint/parser": ">=5.59.5",
    "concurrently": "^8.0.1",
    "eslint": ">=8.40.0",
    "eslint-config-prettier": ">=8.8.0",
    "prettier": ">=2.8.8",
    "typescript": "^5.0.4"
  }
}
